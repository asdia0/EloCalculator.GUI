<UserControl x:Class="EloCalculator.GUI.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EloCalculator.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Menu IsMainMenu="True">
            <MenuItem Header="Games" Click="Games_OnClick">
                <MenuItem Header="Load Game" Click="LoadGame_OnClick"/>
                <MenuItem Header="Add Game" Click="AddGame_OnClick"/>
            </MenuItem>
            <MenuItem Header="Players" Click="Players_OnClick">
                <MenuItem Header="Load Game" Click="LoadPlayer_OnClick"/>
                <MenuItem Header="Add Player" Click="AddPlayer_OnClick"/>
            </MenuItem>
            <MenuItem Header="Tournaments" Click="Tournaments_OnClick">
                <MenuItem Header="Load Tournament" Click="LoadTournament_OnClick"/>
                <MenuItem Header="Add Tournament" Click="AddTournament_OnClick"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
