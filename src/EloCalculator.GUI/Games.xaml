<Window x:Class="EloCalculator.GUI.Games"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EloCalculator.GUI"
        mc:Ignorable="d"
        Title="EloCalculator: Games" Height="450" Width="800">
    <Grid>
        <Menu IsMainMenu="True" Grid.ColumnSpan="3">
            <MenuItem Header="Games" Click="Game_OnClick">
                <MenuItem Header="Load Game" Click="LoadGame_OnClick"/>
                <MenuItem Header="Add Game" Click="AddGame_OnClick"/>
            </MenuItem>
            <MenuItem Header="Players" Click="Players_OnClick">
                <MenuItem Header="Load Game" Click="LoadGame_OnClick"/>
                <MenuItem Header="Add Player" Click="AddPlayer_OnClick"/>
            </MenuItem>
            <MenuItem Header="Tournaments" Click="Tournaments_OnClick">
                <MenuItem Header="Load Tournament" Click="LoadTournament_OnClick"/>
                <MenuItem Header="Add Tournament" Click="AddTournament_OnClick"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
